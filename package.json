{
  "name": "hidra",
  "version": "0.1.0",
  "description": "ESP32-S3 USB-C HID I2C slave firmware",
  "scripts": {
    "prepare": "husky install",
    "format:check": "find main components -type f \\( -name '*.c' -o -name '*.h' -o -name '*.cpp' -o -name '*.hpp' \\) -exec clang-format --dry-run --Werror {} +",
    "format:fix": "find main components -type f \\( -name '*.c' -o -name '*.h' -o -name '*.cpp' -o -name '*.hpp' \\) -exec clang-format -i {} +",
    "precommit": "npm run format:check"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^17.0.0",
    "husky": "^9.1.7"
  }
}
